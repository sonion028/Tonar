{
  "name": "tonar",
  "version": "1.0.0",
  "description": "Tonar: A frontend library with utils, hooks, and React components.",
  "type": "module",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "vite",
    "build": "rm -rf dist && vite build",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "lint:error": "eslint src --ext .ts,.tsx --quiet",
    "format": "prettier --write \"src/**/*.*\"",
    "lint:spellcheck": "cspell lint \"(src | packages)/**/*.{js, ts, jsx, tsx, mjs, cjs, json, css, less, scss, vue, html, md}\"",
    "preinstall": "only-allow pnpm"
  },
  "engines": {
    "node": ">=24.11.1",
    "pnpm": ">=10.22.0"
  },
  "packageManager": "pnpm@10.22.0",
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/react": "^18.3.26",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^5.1.1",
    "cspell": "^9.3.2",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "only-allow": "^1.2.1",
    "prettier": "^3.6.2",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "sass-embedded": "^1.93.3",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.2",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-lib-inject-css": "^2.2.2"
  },
  "keywords": [
    "hooks"
  ],
  "author": "sonion",
  "license": "MIT"
}
